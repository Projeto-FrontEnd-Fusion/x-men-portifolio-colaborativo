{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "types": [
      "jest",
      "node"
    ],
    "baseUrl": "./src",
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@components/modal/*": [
        "components/modal/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}